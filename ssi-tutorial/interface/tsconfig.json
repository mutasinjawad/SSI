{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts","src/app/*.jsx", "src/components/*.jsx", "src/components/Apply.jsx", "src/components/IssuerStepper.jsx", "src/components/header.jsx", "src/components/EstablishConenction.jsx", "src/components/Congrats.jsx", "src/components/Failure.jsx", "src/components/loading.jsx", "src/components/ShareProof.jsx", "src/app/page.jsx", "src/app/layout.jsx", "src/app/verifier"],
  "exclude": ["node_modules"]
}
